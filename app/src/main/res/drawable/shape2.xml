<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <layer-list>
            <item
                android:right="0dp"
                android:top="2dp">
                <shape>
                    <corners
                        android:radius="20dp" />
                    <solid
                        android:color="@color/kuning_samapta" />
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="2dp"
                android:top="10dp"
                android:right="2dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:endColor="#FEF9EF"
                        android:startColor="#FEF9EF" />
                    <corners
                        android:radius="20dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>